    <!-- Slut på Buttons komponent instanser -->
    <hr class="my-4 md:my-10" />
    <!-- Blog komponenter -->
    <section>
      <Heading htmlheading="h2" size="medium">Cards:</Heading>
      <Text>Blog-cards fra forsiden & Manifest-cards fra manifestsiden.</Text>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 mt-4 gap-4 md:gap-8">
        <Blog src={blog3} cardTitle="Pressemeddelelse: Vi Brøler!" dato="Feb 10, 2025" />
        <Blog src={blog3} cardTitle="Pressemeddelelse: Vi Brøler!" dato="Feb 10, 2025" />
