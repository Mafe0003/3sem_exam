---
// Henter parametrene fra Astro.props
const { htmlheading="h2", size="large", font="display", color="brand", stylingclasses=""} = Astro.props; 
const Htmlheading = htmlheading;
 
//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
// h1
"x-large": "text-5xl md:text-7xl lg:text-9xl font-bold",

// h2
"large": "text-4xl md:text-6xl lg:text-8xl font-bold",

// h3
"medium": "text-3xl md:text-5xl lg:text-6xl font-semibold",

// h4
"small": "text-2xl md:text-4xl lg:text-5xl",

// h5
"x-small": "text-lg md:text-2xl lg:text-4xl",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
"display": "font-display",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const colorClasses = {
"brand": "text-brand",
"ink": "text-ink",
"paper": "text-paper",
};
---
<Htmlheading class:list={[stylingclasses, sizeClasses[size], fontClasses[font], colorClasses[color]]}><slot /></Htmlheading>