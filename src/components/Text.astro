---
// Henter parametrene fra Astro.props
const { teksttype = "brødtekst", font = "system", color = "ink", stylingclasses = "" } = Astro.props;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  // stor p
  manchet: "text-base md:text-xl lg:text-3xl",

  // normal p
  brødtekst: "text-sm md:text-lg lg:text-xl",

  // lille p
  konsultativ: "text-xs md:text-sm lg:text-base",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display: "font-display",
  system: "font-system",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const colorClasses = {
  brand: "text-brand",
  ink: "text-ink",
  paper: "text-paper",
};
---

<p class:list={[sizeClasses[teksttype], stylingclasses, fontClasses[font], colorClasses[color]]}><slot /></p>
